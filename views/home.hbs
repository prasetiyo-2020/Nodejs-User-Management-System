{{#if removeUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{this.first_name}} has been removed.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<a href="/adduser" class="btn btn-primary">Add User</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>
                <a href="/viewuser/{{this.id}}" type="button" class="btn btn-success btn-small"><i class="bi bi-eye"></i>  View</a>
                <a href="/edituser/{{this.id}}" type="button" class="btn btn-success btn-small"><i class="bi bi-pencil"></i>  Edit</a>
                <a href="/{{this.id}}" type="button" class="btn btn-success btn-small"><i class="bi bi-person-x"></i>  Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>